<%- include("templates/header") %>

<link rel="stylesheet" href="/public/styles/login.css">

<section class="d-flex align-items-center vh-100 gradient-custom">
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="col-sm-8 col-md-6 col-lg-4">
                <div class="card text-dark bg-light mb-3" style="border-radius: 1rem">
                    <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-sign-in"></i> Reset Password</div>
                    <div class="card-body">
                        <form action="/resetPassword" method="post">
                            <input type="hidden" name="token" value="<%= token %>">
                            <div class="form-group">
                                <label for="typePasswordX">New Password<span class="mandatory">*</span></label>
                                <input type="password" class="form-control" id="typePasswordX" name="newPassword" placeholder="Enter new password" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
                            <a href="/login" class="btn btn-light btn-block">Back to Login</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

</body>
</html>
