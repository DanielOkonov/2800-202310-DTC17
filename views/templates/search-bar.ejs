<div class="container">
    <div class="container">
        <div class="row mt-3">
            <!-- Search Form -->
            <div class="col-md-12 mb-3">
                <!-- Search Query Alert -->
                <% if (query) { %>
                    <div class="alert alert-primary mt-3 py-1 px-2" role="alert">
                        Search results for: <strong><%= query %></strong>
                    </div>
                <% } %>
                <form action="/search" method="GET">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Search patients..." aria-label="Search" aria-describedby="button-addon2" id="searchBar" name="q" value="<%= query || '' %>">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                    <div class="d-flex flex-wrap">
                        <a href="/search" class="btn btn-outline-primary mb-2 mr-2" id="clear-search">Reset Search</a>
                        <a href="/add-patient" class="btn btn-success mb-2" id="add-patient-button"><i class="fas fa-plus"></i> Add Patient</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
